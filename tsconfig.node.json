{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "./out/main"
    },
    "include": [
        "electron.vite.config.ts",
        "src/main/**/*",
        "src/preload/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "src/**/__tests__/**/*",
        "src/**/*.test.ts",
        "src/**/*.spec.ts"
    ]
}