{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "./out/renderer",
        "jsx": "react-jsx",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "include": [
        "src/renderer/**/*",
        "src/shared/**/*",
        "src/preload/index.d.ts"
    ],
    "exclude": [
        "src/**/__tests__/**/*",
        "src/**/*.test.ts",
        "src/**/*.spec.ts"
    ]
}